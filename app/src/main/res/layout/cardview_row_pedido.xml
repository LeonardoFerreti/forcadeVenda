<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/AzulCard"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AzulTitulo"
            android:text="NÃºmero pedido"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:layout_below="@id/txt_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="start"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_below="@id/txt_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/txt_4"
            android:layout_toStartOf="@+id/txt_4" />
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="11dp"
            android:layout_alignBaseline="@+id/txt_3"
            android:layout_alignBottom="@+id/txt_3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>